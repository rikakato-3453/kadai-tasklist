<header>
  <% if logged_in? %>
    <div>
      <h1><%= link_to 'Tasklists', root_path %></h1>
    </div>
 
    <table>
      <tr>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td><%= link_to 'Logout', logout_path, method: :delete %></td>
      </tr>
      <tr>
        <td><%= link_to '新規作成', new_task_path %></td>
      </tr>
    </table>
    
  <% else %>
      <div>
        <table>
          <tr>
            <td><%= link_to 'Signup', signup_path %></td>
            <td><%= link_to 'Login', login_path %></td>
          </tr>
        </table>
      </div>
  <% end %>
</header>